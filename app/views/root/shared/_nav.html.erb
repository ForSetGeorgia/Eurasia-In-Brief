<div class="nav-brief">
  <div class="nav-bar">
    <%= link_to root_path, tabindex: 1, class: 'nav-logo' do %>
      <%= image_set_tag("logo.png", { 'logo@2x.png'  => '2x' }, alt: t('shared.common.name'), title: t('shared.common.name')) %>
    <% end %>
  </div>
  <div class="social-media">
    <%
      title = (content_for?(:page_title) && yield(:page_title) != t('shared.common.name') ? "#{strip_tags_nbsp(yield(:page_title))} | #{t('shared.common.name')}" :
                "#{t('shared.common.name')} | #{t('shared.common.slogan')}").html_safe
      desc = t("shared.common.description").html_safe

    %>
    <a target="_blank" href="https://twitter.com/home?status=<%= title %>%20<%= current_url %>%20via%20%40eurasianet"><i class="fa fa-twitter" aria-hidden="true"></i></a>
    <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=<%= current_url %>"><i class="fa fa-facebook" aria-hidden="true"></i></a>
    <a target="_blank" href="https://www.linkedin.com/shareArticle?mini=true&amp;url=<%= current_url %>&amp;title=<%= title %>&amp;summary=<%= desc %>&amp;source="><i class="fa fa-linkedin" aria-hidden="true"></i></a>
  </div>
</div>
