<%
page_title t('shared.common.show_title',
             model: t('activerecord.models.story', count: 1),
             title: @story.title)
%>

<div class='actions-container'>
  <%= render partial: 'shared/show_actions',
        locals: {
          object: @story,
          index_path: admin_stories_path,
          show_path: admin_story_path,
          edit_path: edit_admin_story_path
                }
  %>
</div>

<dl class="dl-horizontal">
  <dt><strong><%=t 'activerecord.attributes.story.time_period_id' %>:</strong></dt>
  <dd><%= @story.time_period.label %></dd>
  <dt><strong><%=t 'activerecord.attributes.story.country_id' %>:</strong></dt>
  <dd><%= @story.country.name %></dd>
  <dt><strong><%=t 'activerecord.attributes.story.title' %>:</strong></dt>
  <dd><%= @story.title %></dd>
  <dt><strong><%=t 'activerecord.attributes.story.link' %>:</strong></dt>
  <dd><%= link_to @story.link, @story.link if @story.link.present? %></dd>
  <dt><strong><%=t 'activerecord.attributes.story.image' %>:</strong></dt>
  <dd><%= image_tag(@story.image.url(:thumb)) if @story.image.exists? %></dd>
  <dt><strong><%=t 'activerecord.attributes.story.content' %>:</strong></dt>
  <dd><%= simple_format(@story.content) %></dd>
</dl>
