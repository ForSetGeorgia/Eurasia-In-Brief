<%
page_title t('shared.common.show_title',
             model: t('activerecord.models.country', count: 1),
             title: @country.name)
%>

<div class='actions-container'>
  <%= render partial: 'shared/show_actions',
        locals: {
          object: @country,
          index_path: admin_countries_path,
          show_path: admin_country_path,
          edit_path: edit_admin_country_path
                }
  %>
</div>

<dl class="dl-horizontal">
  <dt><strong><%=t 'activerecord.attributes.country.flag_image' %>:</strong></dt>
  <dd><%= image_tag(@country.flag_image.url(:thumb)) if @country.flag_image.exists? %></dd>
  <dt><strong><%=t 'activerecord.attributes.country.flag_image' %>:</strong></dt>
  <dd><%= image_tag(@country.flag_image2.url(:thumb)) if @country.flag_image2.exists? %></dd>
  <dt><strong><%=t 'activerecord.attributes.country.name' %>:</strong></dt>
  <dd><%= @country.name %></dd>
  <dt><strong><%=t 'activerecord.attributes.country.area' %>:</strong></dt>
  <dd><%= "#{number_with_delimiter(@country.area)} km<sup>2</sup>".html_safe if @country.area.present? %></dd>
  <dt><strong><%=t 'activerecord.attributes.country.population' %>:</strong></dt>
  <dd><%= number_with_delimiter(@country.population) %></dd>
  <dt><strong><%=t 'activerecord.attributes.country.gdp' %>:</strong></dt>
  <dd><%= number_with_delimiter(@country.gdp) %></dd>
  <dt><strong><%=t 'activerecord.attributes.country.ti_url' %>:</strong></dt>
  <dd><%= link_to t('shared.actions.view'), @country.ti_url, class: 'btn btn-default btn-sm' if @country.ti_url.present? %></dd>
  <dt><strong><%=t 'activerecord.attributes.country.ti_index_score' %>:</strong></dt>
  <dd><%= @country.ti_index_score %></dd>
  <dt><strong><%=t 'activerecord.attributes.country.ti_index_rank' %>:</strong></dt>
  <dd><%= @country.ti_index_rank %> / 180</dd>
  <dt><strong><%=t 'activerecord.attributes.country.freedom_house_url' %>:</strong></dt>
  <dd><%= link_to t('shared.actions.view'), @country.freedom_house_url, class: 'btn btn-default btn-sm' if @country.freedom_house_url.present? %></dd>
  <dt><strong><%=t 'activerecord.attributes.country.freedom_house_index' %>:</strong></dt>
  <dd><%= @country.freedom_house_index_value %></dd>
  <dt><strong><%=t 'activerecord.attributes.country.leader_image' %>:</strong></dt>
  <dd><%= image_tag(@country.leader_image.url(:thumb)) if @country.leader_image.exists? %></dd>
  <dt><strong><%=t 'activerecord.attributes.country.leader' %>:</strong></dt>
  <dd><%= @country.leader %></dd>
</dl>
